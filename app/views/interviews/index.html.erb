<h1><%= current_user.name %>さんの面談一覧</h1>

<table>
  <tr>
    <th>面接開始時間</th>
    <th>承認状態</th>
  </tr>
  <% @interviews.each do |interview| %>
  <tr>
    <td><%= interview.day %></td>
    <td><%= interview.admission %></td>
    <td><%= link_to '編集', edit_user_interview_path(id: interview.id, user_id: current_user.id) %></td>
    <td><%= link_to '削除', user_interview_path(id: interview.id, user_id: current_user.id),
                                  method: :delete, data: {confirm:'削除していいですか？'} %></td>
  </tr>
  <% end %>
</table>

<%= link_to '新規面談作成', new_user_interview_path(user_id: current_user.id) %>
