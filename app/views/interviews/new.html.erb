<h1><%= current_user.name %>さんの新規面談作成</h1>

<% if @interview.errors.any? %>
  <h2><%= @interview.errors.count %>件のエラーがあります</h2>
  <% @interview.errors.full_messages.each do |message| %>
    <p><%= message %></p>
  <% end %>
<% end %>

<%= form_with(model: @interview, local: true, url: user_interviews_path) do |f| %>
  <div>
    <%= f.label :day, '開始時刻' %>
    <%= f.datetime_select :day, start_year: Time.current.year %>
  </div>
  <%= f.submit '登録' %>
<% end %>
